<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<h1>Editar Cliente</h1>

<%= form_for @customer do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.label :smoker %> <br />
  <% {'S': 'Sim','N': 'NÃ£o'}.each do |key, value| %>
    <%= f.radio_button :smoker, key %> <%= value %> <br /> 
  <% end %>

  <%= f.submit 'Salvar' %>

<% end %>